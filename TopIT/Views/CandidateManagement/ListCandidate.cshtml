@model IEnumerable<TopIT.Models.TblUngvien>

@{
    ViewData["Title"] = "ListCandidate";
}

<h1>Danh sách ứng viên đã ứng tuyển</h1>


<table class="table">
    <thead>
        <tr>
            <th style="display:none">
                @Html.DisplayNameFor(model => model.PkSMaUv)
            </th>
            <th>
                Tên ứng viên
            </th>
            <th>
                Giới tính
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                Kinh nghiệm
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Email
            </th>
            <th>
                Địa chỉ
            </th>
            <th style="display:none">
                Ảnh
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="display:none">
                @Html.DisplayFor(modelItem => item.PkSMaUv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STenUv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SGioitinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNgaysinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SKinhnghiem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SSdt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDiachi)
            </td >
            <td style="display:none">
                @Html.DisplayFor(modelItem => item.SUrlCv)
            </td>
            <td>
                    <button class="btn btn-success">@Html.ActionLink("Chi tiết", "DetailsCandidate", new {  id=item.PkSMaUv },new { style = "color: white ;text-decoration: none;" })</button> |
                    <button class="btn btn-danger" style="color:wheat" onclick="confirmDelete('@item.PkSMaUv')">Xóa</button>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    function confirmDelete(id) {
        if (confirm("Bạn có chắc chắn muốn xóa ứng viên đã ứng tuyển?")) {          
            window.location.href = '/CandidateManagement/DeleteCandidate/' + id;
        }
    }
</script>